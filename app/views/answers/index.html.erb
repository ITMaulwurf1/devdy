<p id="notice"><%= notice %></p>

<h1>Answers on <%= @question.subject %></h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Body</th>
      <th>Author</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.question_id %></td>
        <td><%= answer.body %></td>
        <td><%= answer.author %></td>
        <td><%= answer.rating %></td>
        <td><%= link_to 'Show', question_answer_path(answer.question, answer) %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(answer.question, answer) %></td>
        <td><%= link_to 'Destroy', [answer.question, answer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', @question %>
